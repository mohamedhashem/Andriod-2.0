<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.simplifiedlearning.simplifiedcoding">

    <!-- adding internet permission -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="New Account">
        </activity>
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ProfileActivity" />
        <activity
            android:name=".EditProfile"
            android:label="Edit Profile" />
        <activity
            android:name=".welcome"
            android:label="Welcome" />
        <activity android:name=".AltraTop"
            android:label="AltraSonic Top">
        </activity>
        <activity android:name=".AltraBottom"
            android:label="AltraSonic Bottom">
        </activity>
        <activity android:name=".Setting"
            android:label="Setting">
        </activity>
        <activity android:name=".ToDoList"
            android:label="To Do">
        </activity>
        <activity android:name=".EditName" android:label="Edit Name" android:parentActivityName=".EditProfile"/>

        <activity android:name=".EditEmail" android:label="Edit Email" android:parentActivityName=".EditProfile"/>

        <activity android:name=".EditPassword" android:label="Edit Password" android:parentActivityName=".EditProfile"/>

        <activity android:name=".EditAddress" android:label="Edit Address" android:parentActivityName=".EditProfile"/>

        <activity android:name=".EditAge" android:label="Edit Age" android:parentActivityName=".EditProfile"/>

        <activity android:name=".EditPhone" android:label="EditPhone" android:parentActivityName=".EditProfile"/>
    </application>

</manifest>